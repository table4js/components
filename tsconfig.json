{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES2015"
        ],
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true
    },
    "exclude": [
        "node_modules"
    ]
}